<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="coinData"
            type="com.stutern.cryptocurrencyapp.model.CoinData" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageView_symbol_dialog"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView_name_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageView_symbol_dialog"
        app:layout_constraintStart_toStartOf="@+id/imageView_symbol_dialog"
        app:layout_constraintEnd_toStartOf="@+id/imageView_arrow_dialog"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:textSize="28sp"
        android:text="Placeholder"
        android:padding="5dp" />

    <TextView
        android:id="@+id/textView_price_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_name_dialog"
        app:layout_constraintStart_toStartOf="@+id/textView_name_dialog"
        app:layout_constraintEnd_toEndOf="@+id/textView_name_dialog"/>

    <TextView
        android:id="@+id/textView_marketCap_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_price_dialog"
        app:layout_constraintStart_toStartOf="@+id/textView_price_dialog"
        app:layout_constraintEnd_toEndOf="@+id/textView_price_dialog"/>

    <TextView
        android:id="@+id/textView_24h_volume_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_marketCap_dialog"
        app:layout_constraintStart_toStartOf="@+id/textView_marketCap_dialog"
        app:layout_constraintEnd_toEndOf="@+id/textView_marketCap_dialog"/>
    <TextView
        android:id="@+id/textView_availableSupply_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_24h_volume_dialog"
        app:layout_constraintStart_toStartOf="@+id/textView_24h_volume_dialog"
        app:layout_constraintEnd_toEndOf="@+id/textView_24h_volume_dialog"/>
    <TextView
        android:id="@+id/textView_totalSupply_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_availableSupply_dialog"
        app:layout_constraintStart_toStartOf="@+id/textView_availableSupply_dialog"
        app:layout_constraintEnd_toEndOf="@+id/textView_availableSupply_dialog"/>
    <TextView
        android:id="@+id/textView_percentageChange24h_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_totalSupply_dialog"
        app:layout_constraintStart_toStartOf="@+id/textView_totalSupply_dialog"
        app:layout_constraintEnd_toEndOf="@+id/textView_totalSupply_dialog"/>
    <ImageView
        android:id="@+id/imageView_arrow_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/textView_name_dialog"
        app:layout_constraintStart_toEndOf="@+id/textView_name_dialog"
        app:layout_constraintEnd_toEndOf="@+id/imageView_symbol_dialog"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>